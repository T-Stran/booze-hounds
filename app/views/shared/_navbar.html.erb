<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid"> <h1>BoozeHounds</h1>
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://img.freepik.com/premium-vector/cool-dog-is-holding-root-beer-illustration_194428-2130.jpg?w=2000", class: "w-auto" %>
        <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <%= link_to "Home", "/", class: "nav-link"%>
          <%= link_to "Chat", rooms_path, class: "nav-link"%>
        </li>
        <li class="btn-dice">
        <% min = Pub.all.first.id %>
        <% max = Pub.all.last.id %>
        <% random = rand(min..max) %>
          <%= link_to "", pub_path(random), class: "nav-link fa-solid fa-dice" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar-large", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "https://res.cloudinary.com/dfi8ju7lr/image/upload/v1678190796/BoozeHounds/dropdown_oddycz.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "View Dogs", dogs_path, class: "dropdown-item" %>
              <%= link_to "View Pubs", pubs_path, class: "dropdown-item" %>
              <%= link_to "My Favourites", favourites_path, class: "dropdown-item" %>
              <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item dropdown">
            <%= link_to "Login/Sign-Up", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
