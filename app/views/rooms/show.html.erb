<div class="container-chat">
  <h1>
    <%= @room.name %> Chat
  </h1>
  <br>


    <div class="col" data-controller="room-subscription" data-room-subscription-room-id-value="<%= @room.id %>">
      <div class="container room">
        <div class="room_messages chat" data-room-subscription-target="messages">
          <% @room_messages.each do |room_message| %>
            <%= render "room_messages/room_message", room_message: room_message %>
          <% end %>
        </div>
      </div>


      <%= simple_form_for @room_message, html: { data: { action: "turbo:submit-end->room-subscription#resetForm" } } do |form| %>
        <div class="input-group mt-3">
          <%= form.input :message, as: :string,
                                  wrapper: false,
                                  label: false,
                                  input_html: {
                                    class: 'chat-input'
                                  } %>
          <div class="input-group-append">
            <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
          </div>
        </div>

        <%= form.input :room_id, as: :hidden %>
      <% end %>
    </div>
  </div>
</div>
